{
  "nfs_exports": {
    "/assets": {
      "clients": {
        "*": {
          "writeable": true,
          "sync": false,
          "options": [
            "no_subtree_check",
            "all_squash",
            "async"
          ],
          "anon_user_name": "www-data",
          "anon_group_name": "www-data"
        }
      }
    }
  },
  "drupal_frontend": {
    "css_preprocessor": {
      // Path to file
      "/srv/www/herc/current/profiles/test/themes/herc_bare":{
        // Ruby gems needed to compile
        "gems": [
          "bundler"
        ],
        // Commands to run so install can occur.
        "commands": [
          "bundle install && bundle update",
          "bundle exec compass compile"
        ]
      }
    }
  },
  "drupal": {
      "drush": {
        "repository": "https://github.com/drush-ops/drush.git",
        "revision": "master"
      },
      "sites": {
        "herc": {
            "active": true,
            "deploy": {
                "action": ["deploy", "install"],
                "releases": 1
            },
            "drush_make": {
              "api": 2,
              "files": {
                "core": "drupal-org-core.make",
                "default": "build-herc.make"
              },
             "template": true
            },
            "drupal": {
                "version": "7.28",
                "install": {
                    "install_configure_form.update_status_module": "'array(FALSE,FALSE)'",
                    "install_configure_form.date_default_timezone": "'America/Denver'",
                    "--clean-url": 1,
                    "--site-name": "'Hercules Industries'"
                },
                "settings": {
                    "profile": "herc",
                    "files": "sites/default/files",
                    "cookbook": "drupal",
                    "settings": {
                      "default": {
                        "location": "sites/default/settings.php"
                      },
                      "herc": {
                        "location": "profiles/herc/includes/settings/herc.settings.php"
                      },
                      "herc_dev": {
                        "location": "profiles/herc/includes/settings/herc.dev.settings.php"
                      }
                    },
                    "db_name": "herc",
                    "db_host": "localhost",
                    "db_prefix": "",
                    "db_driver": "mysql",
                    "db_file": ""
                }
            },
            "repository": {
                "host": "github.com",
                "uri": "git@github.com:ryanblyth/herc.git",
                "revision": "master"
            },
            "web_app": {
                "80": {
                  "server_name": "herc.local",
                  "rewrite_engine": "On",
                  "docroot": "/srv/www/herc/current"
                }
            }
        }
      }
  }
}
